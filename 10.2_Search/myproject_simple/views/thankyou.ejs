<%- include('header'); -%>

    <header>
        <div class="container-fluid bg-primary-subtle">
            <div class="col-sm-8 mx-auto text-center py-2">
                <h1 class="display-4">dKin Caps</h1>
                <p class="lead ">A young and inspiring organisation whose
                    primary purpose is to bring you the highest quality headwear available.</p>
            </div>
        </div>
    </header>

    <main>
        <div class="container">
            <h3 class="mt-3">dKin Caps: Form submmitted successfully</h3>

            <p>
                Welcome Mick to the <strong>dKin Caps</strong> community. your membership details have been received. Please check the below:
              
            </p>

            <h5>Membership details</h5>

            <div>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row" style="width: 20%;">Firstname</th>
                            <td style="width: 80%;"><%= firstname %></td> 
                        </tr>
                        <tr>
                            <th scope="row" style="width: 20%;">Surename</th>
                            <td style="width: 80%;"><%= surename %></td>
                        </tr>
                        <tr>
                            <th scope="row" style="width: 20%;">Email</th>
                            <td style="width: 80%;"><%= email %></td>
                        </tr>
                        <tr>
                            <th scope="row" style="width: 20%;">Mobile</th>
                            <td style="width: 80%;"><%= mobileNumber %></td>
                        </tr>
                        <tr>
                            <th scope="row" style="width: 20%;">Cap Style</th>
                            <td style="width: 80%;"><%= capstyles %></td>
                      
                        <tr>
                            <th scope="row" style="width: 20%;"># Caps Owned</th>
                            <td style="width: 80%;"><%= inputNumCaps %></td>
                        </tr>
                        <tr>
                            <th scope="row" style="width: 20%;">Comments</th>
                            <td style="width: 80%;"><%= comments %></td>
                        </tr>
                    </tbody>
                </table>

                <% if (comments.length < 20) { %>
                    <div style="background-color: var(--bs-warning-bg-subtle)" class="container p-4 border border-secondary rounded">
                        <div class="comment-length">Thank your for your <b class="text-danger">BREIF</b> comment... maybe a few more words next time :) </div>
                    </div>
                 
                <% } else { %>
                    <div class="bg-primary-subtle container p-4 border border-secondary rounded text-secondary">
                        <div class="comment-length fw-medium">Wonderful! We really appreciate the thoughts you shared in your <b class="text-success">DETAILED</b> comments!</div>
                    </div>
                <% } %>
                <div class="mt-2">
                    <a href="/" class="">Click here to return to the feedback form</a>
                </div>
                
            </div>
        </div>
    </main>

    <%- include('footer'); -%>